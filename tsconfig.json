{
	"compilerOptions": {
		"inlineSourceMap": true,
		"outDir": "dist",

		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext",
		"lib": [ "esnext" ],

		"strict": true,
		"skipLibCheck": true,
		"strictFunctionTypes": false,

		"downlevelIteration": true,
		"noEmitOnError": false,
		"resolveJsonModule": true
	}
}
