{
	"compilerOptions": {
		"composite": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": ".",
		"paths": {
			"xxscreeps/mods/*": [ "./mods/*" ],
			"xxscreeps/*": [ "./core/*" ],
		},

		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext",
		"lib": [ "esnext" ],

		"strict": true,
	},
	"exclude": [ "**/package.json", "**/package-lock.json", "**/tsconfig.json" ],
	"include": [ "core", "mods" ],
}
