{
	"compilerOptions": {
		"composite": true,
		"sourceMap": true,
		"outDir": "dist",

		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext",
		"lib": [ "esnext" ],

		"strict": true,
	},
	"exclude": [ "dist", "node_modules", "**/package.json", "**/package-lock.json", "**/tsconfig.json" ],
	"include": [ "**/*", "**/*.json" ],
}
