{
	"compilerOptions": {
		"baseUrl": "src",
		"rootDir": "src",

		"paths": {
			"xxscreeps/*": [ "*" ],
		},

		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext",
		"lib": [ "esnext", "dom" ],

		"strict": true,
	},
	"exclude": [ "**/package.json", "**/package-lock.json", "**/tsconfig.json" ]
}
