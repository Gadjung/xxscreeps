{
	"$schema": "http://json-schema.org/draft-07/schema",
	"description": "Screeps configuration for this server",
	"type": "object",
	"required": [ "game", "storage" ],
	"properties": {
		"game": {
			"type": "object",
			"description": "Game settings",
			"required": [ "tickSpeed" ],
			"properties": {
				"tickSpeed": {
					"type": "integer",
					"description": "Minimum length of a game tick in milliseconds.",
					"default": 250
				}
			}
		},
		"storage": {
			"type": "object",
			"description": "Configuration for local storage",
			"required": [ "path" ],
			"properties": {
				"path": {
					"type": "string",
					"description": "Path to save game state, relative to this configuration file.",
					"default": "./data"
				}
			}
		}
	}
}
